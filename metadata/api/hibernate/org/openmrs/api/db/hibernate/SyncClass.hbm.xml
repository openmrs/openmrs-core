<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.synchronization.filter">

	<class name="SyncClass" table="synchronization_class">

		<id name="syncClassId" type="int" column="class_id">
			<generator class="native" />
		</id>

		<property name="name" type="java.lang.String"
			column="name" length="255" not-null="true" />

		<property name="type" not-null="true">
			<type name="org.openmrs.api.db.hibernate.usertype.GenericEnumUserType">
				<param name="enumClassName">org.openmrs.synchronization.filter.SyncClassType</param>
			</type>
		</property>
			
		<property name="defaultTo" column="default_to" type="boolean" not-null="true" />

		<property name="defaultFrom" column="default_from" type="boolean" not-null="true" />
        
	</class>
</hibernate-mapping>
