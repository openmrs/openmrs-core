    }

    #hiddenInputs .button {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    #hiddenInputs .button:hover {
        background-color: #1e7e34;
    }

    #logLinesDiv {
        background-color: #e9ecef;
        padding: 15px;
        border-radius: 5px;
        margin-top: 20px;
        font-size: 0.9em;
        color: rgb(14, 13, 13);
        overflow: auto;
        max-height: 250px;
        width: 100%;
        max-width: 600px;
        box-sizing: border-box;
    }

    #logLinesDiv b {
        font-weight: bold;
        display: block;
        margin-bottom: 5px;
    }

    #logLines {
