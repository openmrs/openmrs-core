        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .continue-button:hover {
        background-color: var(--openmrs-logo-color);
    }

    #updateWarnings {
        background-color: #ffe0b2;
        color:rgb(121, 85, 72);
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        border: 1px solid #ffc107;
    }

    #updateWarnings b {
        font-weight: bold;
    }

    #updateLogFile {
        padding-left: 15px;
        margin-top: 10px;
        font-size: 0.9em;
        color:rgb(14, 13, 13);
    }

    #warningsAlert {
        background-color: #ffdddd;
        color: #d32f2f;
