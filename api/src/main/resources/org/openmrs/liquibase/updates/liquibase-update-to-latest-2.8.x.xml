<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog 
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

	<changeSet id="TRUNK-6285-2025-03-13" author="manojll">
		<preConditions  onFail="MARK_RAN">
			<columnExists tableName="global_property" columnName="description"/>
		</preConditions>
		<comment>change description type TEXT to VARCHAR(1024) in 'global_property' table</comment>
		<modifyDataType tableName="global_property" columnName="description" newDataType="VARCHAR(1024)"/>
  </changeSet>

	<changeSet author="mgoodrich" id="2025-03-20-TRUNK-6315">
		<preConditions onFail="MARK_RAN">
			<primaryKeyExists tableName="liquibasechangelog" />
		</preConditions>
		<comment>TRUNK-6315: Remove Primary Key on the liquibasechangelog table</comment>
		<dropPrimaryKey tableName="liquibasechangelog"/>
	</changeSet>
	
</databaseChangeLog>
